@model UPTrain.ViewModels.VerifyEmailViewModel

@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<style>
    /* 1. التعديل: تغميق الخلفية الرئيسية (verify-bg) بزيادة التظليل إلى 0.7 */
    .verify-bg {
        /* إزالة التدرج اللوني القديم واستبداله بتظليل داكن موحد بنسبة 0.7 */
        background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), /* تظليل أغمق */
        url('/img/unnamed.jpg'); /* الصورة الأصلية */
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* 2. التعديل: جعل البطاقة شفافة وتغيير لون النصوص إلى الأبيض */
    .verify-card {
        width: 100%;
        max-width: 420px;
        border-radius: 20px;
        /* جعل الخلفية شبه شفافة */
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(15px); /* زيادة التمويه */
        border: 1px solid rgba(255, 255, 255, 0.5); /* حد أبيض أوضح */
        box-shadow: 0 8px 24px rgba(0,0,0,0.4);
        padding: 30px;
        color: #fff; /* لون النصوص الأساسي باللون الأبيض */
    }

    /* 3. تعديل الألوان لكي تظهر على الخلفية الشفافة */
    .text-gradient {
        /* استخدام التدرج اللوني الخاص بك */
        background: linear-gradient(45deg, #28a745, #0d6efd);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .form-label {
        color: #fff !important; /* لون Labels باللون الأبيض */
        font-weight: 600 !important;
    }

    /* 4. جعل حقول الإدخال شفافة */
    .form-control {
        border-radius: 12px;
        padding: 0.75rem 1rem;
        background-color: rgba(255, 255, 255, 0.1); /* خلفية حقل الإدخال شفافة */
        border: 1px solid rgba(255, 255, 255, 0.5);
        color: #fff; /* لون النص المدخل */
        transition: 0.3s;
    }

        .form-control:focus {
            box-shadow: 0 0 10px rgba(40, 167, 69, 0.5); /* ظل بلون التدرج */
            border-color: #28a745;
        }

    /* ترك ستايل الزر كما هو */
    .btn-gradient {
        background: linear-gradient(45deg, #28a745, #0d6efd);
        border: none;
        color: #fff;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-gradient:hover {
            opacity: 0.95;
            transform: translateY(-2px);
        }

    /* جعل رابط "Back" أبيض وواضح */
    .text-center a {
        color: #fff !important;
        font-weight: 600;
        transition: 0.2s;
    }

        .text-center a:hover {
            color: #28a745 !important;
        }

</style>

<div class="verify-bg">
    <div class="verify-card">
        <h2 class="text-center mb-4 text-gradient">Verify Email</h2>
        <form asp-action="VerifyEmail" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <input type="submit" value="Verify" class="btn btn-gradient w-100 p-2" />

            <div class="text-center mt-3">
                <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="text-decoration-none">Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
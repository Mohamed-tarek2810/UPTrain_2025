@model UPTrain.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100 login-bg">
    <div class="card shadow-lg p-4 p-md-5 login-card">
        <h2 class="text-center mb-4 fw-bold text-gradient">Login</h2>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label class="form-check-label fw-semibold">@Html.DisplayNameFor(m => m.RememberMe)</label>
                </div>
                <a asp-area="Identity" asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none small text-gradient fw-bold">
                    Forgot password?
                </a>
            </div>

            <button type="submit" class="btn btn-gradient w-100 py-2 fs-5 fw-bold mb-3">Login</button>

            <p class="text-center small text-white">
                Don't have an account?
                <a asp-controller="Account" asp-area="Identity" asp-action="Register" class="text-decoration-none text-gradient fw-semibold">Register</a>
            </p>

            <div class="text-center mt-2">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-decoration-none small text-light">
                    &larr; Back to Home
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    /* التعديل: زيادة التظليل لـ 0.7 لجعل الخلفية أغمق */
    .login-bg {
        background-color: #f0f2f5;
        /* تغيير قيمة التظليل من 0.5 إلى 0.7 */
        background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/img/unnamed.jpg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }

    /* ترك كرت تسجيل الدخول كما هو (شفاف) */
    .login-card {
        width: 100%;
        max-width: 420px;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.5);
        color: #fff;
    }

    /* باقي ستايلات النصوص والأزرار كما هي */
    .text-gradient,
    .text-primary,
    .text-gradient:hover {
        background: linear-gradient(45deg, #20c997, #0d6efd);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        color: #fff;
    }

    .form-label,
    .form-check-label {
        color: #fff !important;
    }

    .text-light {
        color: #dee2e6 !important;
    }

    .btn-gradient {
        background: linear-gradient(45deg, #0d6efd, #20c997);
        border: none;
        color: #fff;
        transition: 0.3s;
    }

        .btn-gradient:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

    .form-control {
        border-radius: 12px;
        padding: 0.75rem 1rem;
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.5);
        color: #fff;
    }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .form-control:focus {
            box-shadow: 0 0 10px rgba(32, 201, 151, 0.5);
            border-color: #20c997;
        }
</style>
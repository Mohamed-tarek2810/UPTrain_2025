@model UPTrain.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100 register-bg">
    <div class="card shadow-lg p-4 p-md-5 register-card">
        <h2 class="text-center mb-4 fw-bold text-gradient">Register</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold"></label>
                <input asp-for="FullName" class="form-control form-control-lg" placeholder="Enter your full name" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>


            <button type="submit" class="btn btn-gradient w-100 py-2 fs-5 fw-bold mb-3">Register</button>

            <p class="text-center small text-white">
                Already have an account?
                <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="text-decoration-none text-gradient fw-semibold">Login</a>
            </p>

            <div class="text-center mt-2">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-decoration-none small text-light">
                    &larr; Back to Home
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}

<style>
    .register-bg {
        background-color: #f0f2f5;
        background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/img/unnamed.jpg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }


    .register-card {
        width: 100%;
        max-width: 420px;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.5);
        color: #fff;
    }

    .text-gradient,
    .text-gradient:hover {
        background: linear-gradient(45deg, #ffc107, #0d6efd);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .form-label,
    .form-check-label {
        color: #fff !important;
    }

    .text-center.small {
        color: #fff;
    }

    .text-light {
        color: #dee2e6 !important;
    }


    .btn-gradient {
        background: linear-gradient(45deg, #ffc107, #0d6efd);
        border: none;
        color: #fff;
        transition: 0.3s;
    }

        .btn-gradient:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

    .form-control {
        border-radius: 12px;
        padding: 0.75rem 1rem;
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.5);
        color: #fff;
    }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .form-control:focus {
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
            border-color: #ffc107;
        }
</style>
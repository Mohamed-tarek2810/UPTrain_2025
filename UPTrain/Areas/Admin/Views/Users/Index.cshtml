@model IEnumerable<UPTrain.Models.User>

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
    }

    h2 {
        color: #ffffff;
    }

    .table {
        background-color: #1f1f1f;
        color: #e0e0e0;
        border: 1px solid #333;
    }

        .table thead th {
            background-color: #333;
            color: #ffffff;
            border-color: #444;
        }

        .table tbody tr {
            border-color: #444;
        }

    .table-bordered th,
    .table-bordered td {
        border-color: #444 !important;
    }

    .btn-primary {
        background-color: #4CAF50;
        border-color: #4CAF50;
        color: white;
    }

    .btn-warning {
        background-color: #FFC107;
        border-color: #FFC107;
        color: #212529;
    }

    .btn-danger {
        background-color: #DC3545;
        border-color: #DC3545;
        color: white;
    }

    .form-control {
        background-color: #2a2a2a;
        border-color: #444;
        color: #e0e0e0;
    }
     
        .form-control:focus {
            background-color: #2a2a2a;
            border-color: #4CAF50;
            color: #e0e0e0;
            box-shadow: 0 0 0 0.2rem rgba(76, 175, 80, 0.25);
        }

    .search-container {
        background-color: #1f1f1f;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        border: 1px solid #333;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .no-results {
        text-align: center;
        color: #999;
        font-style: italic;
        padding: 40px;
    }
</style>

<h2>Users Management</h2>


<div class="search-container">
    <form method="get" class="row g-3 align-items-end">
        <div class="col-md-8">
            <label for="searchTerm" class="form-label">Search Users</label>
            <input type="text"
                   class="form-control"
                   id="searchTerm"
                   name="searchTerm"
                   placeholder="Search by name, username, email, or role..."
                   value="@ViewBag.SearchTerm">
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-search"></i> Search
            </button>
        </div>
        <div class="col-md-2">
            <a href="@Url.Action("Index")" class="btn btn-secondary w-100">
                <i class="fas fa-times"></i> Clear
            </a>
        </div>
    </form>
</div>


<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New User
    </a>


    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
    {
        <span class="text-muted">
            Found @Model.Count() result(s) for "@ViewBag.SearchTerm"
        </span>
    }
    else
    {
        <span class="text-muted">
            Total Users: @Model.Count()
        </span>
    }
</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <span class="badge bg-info">@user.Role</span>
                    </td>
                    <td>
                        @if (user.IsBlocked)
                        {
                            <span class="badge bg-danger">Blocked</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Active</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning" title="Edit User">
                                <i class="fas fa-edit"></i>
                            </a>

                            <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure you want to delete this user?')"
                                        title="Delete User">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>

                            @if (user.IsBlocked)
                            {
                                <form asp-action="Unblock" asp-route-id="@user.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-success" title="Unblock User">
                                        <i class="fas fa-unlock"></i>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Block" asp-route-id="@user.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-dark"
                                            onclick="return confirm('Are you sure you want to block this user?')"
                                            title="Block User">
                                        <i class="fas fa-lock"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="no-results">
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <h4>No users found matching "@ViewBag.SearchTerm"</h4>
            <p>Try adjusting your search terms or <a href="@Url.Action("Index")">view all users</a></p>
        }
        else
        {
            <h4>No users found</h4>
            <p><a asp-action="Create" class="btn btn-primary">Add your first user</a></p>
        }
    </div>
}


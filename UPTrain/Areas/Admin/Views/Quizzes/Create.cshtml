@model Quiz
@{
    ViewData["Title"] = "Create Quiz";
}

<style>
    .dark-form {
        background-color: #000000;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

        .dark-form .form-control,
        .dark-form .form-select {
            background-color: #000000;
            border: 2px solid #333333;
            color: #ffffff;
        }

            .dark-form .form-control:focus,
            .dark-form .form-select:focus {
                background-color: #000000;
                border-color: #007bff;
                color: #ffffff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        .dark-form .form-label {
            color: #ffffff;
            font-weight: bold;
        }

        .dark-form h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 30px;
        }

        .dark-form .form-control::placeholder {
            color: #cccccc;
        }

        .dark-form .text-danger {
            color: #ff6b6b !important;
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="dark-form">
                <h2>Create New Quiz</h2>

                <form asp-action="Create" method="post">
                    <div class="mb-4">
                        <label asp-for="CourseId" class="form-label">Select Course</label>
                        <select asp-for="CourseId" class="form-select" asp-items="ViewBag.Courses">
                            <option value="">-- Choose Course --</option>
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Title" class="form-label">Quiz Title</label>
                        <input asp-for="Title" class="form-control" type="text" placeholder="Enter quiz title..." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button type="submit" class="btn btn-success btn-lg me-md-2">Save Quiz</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
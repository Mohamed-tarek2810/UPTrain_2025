@model UPTrain.Models.Lesson

@{
    ViewData["Title"] = "Lesson Details - " + Model.Title;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="Customer" asp-controller="Courses" asp-action="Courses">
                            <i class="fas fa-home me-1"></i>Courses
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="Customer"
                           asp-controller="Lesson"
                           asp-action="CourseLessons"
                           asp-route-courseId="@Model.CourseId">
                            <i class="fas fa-book me-1"></i>Course Lessons
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center">
                                <span class="badge bg-white text-primary rounded-circle p-3 me-3 fs-4">
                                    @Model.OrderIndex
                                </span>
                                <div>
                                    <h1 class="mb-2">@Model.Title</h1>
                                    <p class="mb-0 opacity-8">
                                        <i class="fas fa-clock me-2"></i>
                                        Lesson @Model.OrderIndex
                                    </p>
                                </div>
                            </div>
                        </div>
                        <!-- مكان لعلامة الفيديو أو أكشن تاني -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Lesson Content -->
        <div class="col-lg-8">
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-book-open me-2 text-primary"></i>
                        Lesson Content
                    </h5>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.Content))
                    {
                        <div class="lesson-content">
                            <p class="lead">@Html.Raw(Model.Content.Replace("\n", "<br>"))</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-file-alt display-4 text-muted mb-3"></i>
                            <h5 class="text-muted">Content Coming Soon</h5>
                            <p class="text-muted">The lesson content will be available shortly.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Video Section -->
            @if (!string.IsNullOrEmpty(Model.VideoUrl))
            {
                <div class="card shadow border-0 mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-play-circle me-2 text-success"></i>
                            Lesson Video
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="ratio ratio-16x9">
                            @if (Model.VideoUrl.Contains("youtube.com") || Model.VideoUrl.Contains("youtu.be"))
                            {
                                <iframe src="@Model.VideoUrl.Replace("watch?v=", "embed/")"
                                        allowfullscreen></iframe>
                            }
                            else
                            {
                                <video controls class="w-100">
                                    <source src="@Model.VideoUrl" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Actions + Info -->
        <div class="col-lg-4">
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-tasks me-2 text-info"></i>
                        Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                 
                        <!-- Back to Lessons -->
                        <a asp-area="Customer"
                           asp-controller="Lesson"
                           asp-action="CourseLessons"
                           asp-route-courseId="@Model.CourseId"
                           class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to Course Lessons
                        </a>

                        <!-- Mark as Complete -->
                        <button class="btn btn-success" disabled>
                            <i class="fas fa-check-circle me-2"></i>
                            Mark as Complete
                        </button>
                    </div>
                </div>
            </div>

            <!-- Lesson Info Card -->
            <div class="card shadow border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2 text-info"></i>
                        Lesson Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="text-center p-3 bg-light rounded">
                                <i class="fas fa-sort-numeric-up text-primary fs-4"></i>
                                <div class="mt-2">
                                    <small class="text-muted d-block">Order</small>
                                    <strong>@Model.OrderIndex</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center p-3 bg-light rounded">
                                @if (!string.IsNullOrEmpty(Model.VideoUrl))
                                {
                                    <i class="fas fa-play-circle text-success fs-4"></i>
                                    <div class="mt-2">
                                        <small class="text-muted d-block">Video</small>
                                        <strong class="text-success">Available</strong>
                                    </div>
                                }
                                else
                                {
                                    <i class="fas fa-video-slash text-muted fs-4"></i>
                                    <div class="mt-2">
                                        <small class="text-muted d-block">Video</small>
                                        <strong class="text-muted">Not Available</strong>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



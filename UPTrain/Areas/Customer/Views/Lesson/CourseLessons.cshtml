            transform: translateY(-2px);
        }

    .quiz-btn:hover:not(:disabled) {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #000;
        transform: scale(1.02);
        box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
    }

    .completion-badge {
        animation: bounce 2s infinite;
    }



    {

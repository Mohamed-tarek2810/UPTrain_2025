        background: linear-gradient(45deg, #11998e, #38ef7d);
    }

    .bg-gradient-info {
        background: linear-gradient(45deg, #11998e 0%, #38ef7d 100%);
    }

    .bg-gradient-success {
        background: linear-gradient(45deg, #28a745 0%, #20c997 100%);
    }

    .lesson-number-badge {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .btn {
        border-radius: 25px;
        font-weight: 500;
        transition: all 0.3s ease;
    }


@model UPTrain.Models.Quiz
@{
    ViewData["Title"] = "Start Quiz";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h3>@Model.Title - Quiz</h3>
        </div>
        <div class="card-body">
            <form asp-area="Customer" asp-controller="Quiz" asp-action="SubmitQuiz" method="post">
                <input type="hidden" name="lessonId" value="@ViewBag.Lesson.LessonId" />

                @if (ViewBag.Questions != null && ViewBag.Questions.Count > 0)
                {
                    foreach (var question in ViewBag.Questions)
                    {
                        <div class="mb-4 p-3 border rounded">
                            <h5>@question.QuestionText</h5>
                            <div>
                                <label>
                                    <input type="radio" name="answers[@question.QuestionId]" value="OptionA" />
                                    @question.OptionA
                                </label><br />
                                <label>
                                    <input type="radio" name="answers[@question.QuestionId]" value="OptionB" />
                                    @question.OptionB
                                </label><br />
                                <label>
                                    <input type="radio" name="answers[@question.QuestionId]" value="OptionC" />
                                    @question.OptionC
                                </label><br />
                                <label>
                                    <input type="radio" name="answers[@question.QuestionId]" value="OptionD" />
                                    @question.OptionD
                                </label>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning text-center">
                        No questions available for this quiz.
                    </div>
                }

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-check-circle me-2"></i> Submit Quiz
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@model IEnumerable<Courses>

@{
    ViewData["Title"] = "Courses";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold text-primary">✨ Available Courses</h2>

    <!-- 🔎 Search Bar -->
    <form asp-action="Courses" method="get" class="d-flex justify-content-center mb-4">
        <input type="text" name="searchQuery" value="@ViewBag.SearchQuery"
               class="form-control w-50 rounded-pill shadow-sm me-2"
               placeholder="Search by course title ..." />
        <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-search"></i> Search
        </button>
    </form>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var course in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-lg border-0 rounded-4 course-card">


                    <img src="~/images/@course.ImageUrl"
                         class="course-image" alt="@course.Title"
                         onerror="this.src='/images/default-course.jpg'; this.onerror=null;" />



                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark">@course.Title</h5>

                        <h6 class="text-muted mb-2">
                            <i class="bi bi-tag-fill text-primary"></i>
                            @course.Category
                        </h6>

                        @* <h5 class="card-title fw-bold text-dark">@course.Price</h5> *@

                        <p class="card-text flex-grow-1 text-secondary" style="font-size: 0.95rem;">
                            @if (!string.IsNullOrEmpty(course.Description) && course.Description.Length > 120)
                            {
                                @($"{course.Description.Substring(0, 120)}...")
                            }
                            else
                            {
                                @course.Description
                            }
                        </p>

                        <a asp-action="CoursesDetails"
                           asp-route-id="@course.CourseId"
                           class="btn btn-primary mt-auto w-100 fw-semibold rounded-pill shadow-sm">
                            <i class="bi bi-eye-fill"></i> View Details
                        </a>
                    </div>


                    <div class="card-footer bg-light text-muted small text-center border-0 rounded-bottom-4">
                        <i class="bi bi-person-circle"></i>
                        Created By: <span class="fw-semibold">@course.CreatedBy?.FullName</span>
                    </div>
                </div>
            </div>
        }

    </div>
    <nav class="mt-5">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link rounded-pill mx-1 shadow-sm"
                       asp-action="Courses"
                       asp-route-pageNumber="@i"
                       asp-route-searchQuery="@ViewBag.SearchQuery">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>


<style>
    .course-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .course-card:hover {
            transform: translateY(-8px);
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.15);
        }

        .course-card .card-body h5 {
            color: #0d6efd;
        }

        .course-card .btn-primary {
            background: linear-gradient(45deg, #0d6efd, #00b4d8);
            border: none;
            transition: 0.3s ease;
        }

            .course-card .btn-primary:hover {
                background: linear-gradient(45deg, #0077b6, #0096c7);
                transform: scale(1.05);
            }
</style>
